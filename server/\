package db


func CreateTask(price, operation int, userID uint) (int, error) {
    task := Task{
        UserID: userID,
        Price: price,
        TypeOperation: operation,
    }
    tx := dbConn.Create(&task)
    if tx.Error != nil {
        return tx.Error
    }
    return task.ID, nil
}

